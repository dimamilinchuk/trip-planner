<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{title}}</title>
    <link rel='stylesheet' href='/styles/output.css' />
  </head>

  <body
    class='bg-gradient-to-br from-gray-100 to-gray-200 text-gray-800 min-h-screen'
  >
    <header class='bg-blue-700 text-white py-4 shadow-lg'>
      <div class='container mx-auto flex justify-between items-center px-6'>
        <h1 class='text-2xl font-bold hover:text-gray-300 transition'>
          <a href='/'>Trip Planner</a>
        </h1>
        <nav class='space-x-4'>
          {{#if user}}
            <form method='POST' action='/users/logout'>
              <button
                type='submit'
                class='bg-red-500 text-white px-4 py-2 rounded-lg shadow hover:bg-red-600 transition'
              >
                Logout
              </button>
            </form>
          {{else}}
            <div class='space-x-4'>
              <form method='GET' action='/users/login' class='inline'>
                <button
                  type='submit'
                  class='bg-green-500 text-white px-4 py-2 rounded-lg shadow hover:bg-green-600 transition'
                >
                  Login
                </button>
              </form>
              <form method='GET' action='/users/register' class='inline'>
                <button
                  type='submit'
                  class='bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-600 transition'
                >
                  Register
                </button>
              </form>
            </div>
          {{/if}}
        </nav>
      </div>
    </header>
    <main class='container mx-auto px-6 py-8'>
      {{{body}}}
    </main>
    <footer class='bg-gray-900 text-gray-400 py-6'>
      <div class='container mx-auto text-center'>
        &copy; 2025 Trip Planner. All rights reserved.
      </div>
    </footer>
  </body>

</html>